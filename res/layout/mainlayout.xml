<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <WebView
        android:id="@+id/wb1"
        android:layout_width="match_parent"
        android:layout_height="494dp"
        android:layout_y="398dp" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </GridLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <EditText
        android:id="@+id/txtUrl"
        android:layout_width="521dp"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="51dp"
        android:ems="10"
        android:inputType="textNoSuggestions" />

    <Button
        android:id="@+id/bntDownload"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="249dp"
        android:layout_y="9dp"
        android:onClick="btnDownload_Clicked"
        android:text="Top Movies" />

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="440dp"
        android:layout_height="235dp"
        android:layout_x="20dp"
        android:layout_y="101dp"
        android:text="                     "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnPauseTor"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_x="471dp"
        android:layout_y="104dp"
        android:onClick="btnPauseTor_Clicked"
        android:text="Pause" />

    <Button
        android:id="@+id/btnResumeTor"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_x="467dp"
        android:layout_y="161dp"
        android:onClick="btnResumeTor_Clicked"
        android:text="Resume" />

    <TextView
        android:id="@+id/tvDebug"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="352dp"
        android:text="                                         "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00EEEE" />

</AbsoluteLayout>